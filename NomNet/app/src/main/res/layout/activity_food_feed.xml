    <include
        android:id="@+id/topbar"
        layout= "@layout/topbar"
        android:textColor="#FFF"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_below="@+id/topbar"
