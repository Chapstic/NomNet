<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background">

    <include
        android:id="@+id/topbar"
        layout="@layout/topbar"
        android:textColor="#FFF"/>

    <ImageView
        android:id="@+id/profilepic"
        android:src="@drawable/albert"
        android:layout_width = "150dp"
        android:layout_height= "150dp"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/profilename"
        android:textColor="#ffffff"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"
        android:layout_below="@id/profilepic"
        android:gravity="center"
        android:text="AYue63"/>
    <TextView
        android:textColor="#ffffff"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_below="@+id/profilename"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="AYue63@Gmail.com"
        android:id="@+id/textView" />

    <include
        android:id="@+id/bottombar"
        layout= "@layout/bottombar"
        android:textColor="#FFF"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nomification"
        android:id="@+id/nomif_button"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="124dp"
        android:layout_height="wrap_content"
        android:text="Return"
        android:id="@+id/return_button"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/nomif_button"
        android:layout_alignRight="@+id/nomif_button"
        android:layout_alignEnd="@+id/nomif_button"
        android:layout_marginTop="10dp" />



</RelativeLayout><!-- From: file:/Users/Elliscope/Documents/Hackathon/2015Spring/NomNet3/NomNet/app/src/main/res/layout/activity_profile.xml -->